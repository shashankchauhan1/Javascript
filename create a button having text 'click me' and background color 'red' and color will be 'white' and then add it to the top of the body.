//  create a button having text 'click me' and background color 'red' and color will be 'white' and then add it to the top of the body.

// create element
let btn=document.createElement("button");
btn.innerText="click me";
btn.style.backgroundColor="red";
btn.style.color="white";

// add element

let add=document.querySelector("body");
add.prepend(btn);
